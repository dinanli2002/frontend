<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_titol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTRARSE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.078"
        app:layout_constraintHorizontal_bias="0.49"/>
    <View
        android:id="@+id/view_superior"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#66778811"/>
    <TextView
        android:id="@+id/tv_registrar_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOMBRE"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_superior"/>
    <TextView
        android:id="@+id/tv_registrar_usuari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USUARIO"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_registrar_nombre"/>
    <TextView
        android:id="@+id/tv_registrar_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTRASEÑA"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_registrar_usuari"/>
    <TextView
        android:id="@+id/tv_registrar_pass1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REPETIR CONTRASEÑA"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_registrar_password"/>
    <EditText
        android:id="@+id/et_registrar_nombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        app:layout_constraintLeft_toRightOf="@id/tv_registrar_nombre"
        app:layout_constraintTop_toTopOf="@id/tv_registrar_nombre"
        app:layout_constraintRight_toRightOf="parent"/>
    <EditText
        android:id="@+id/et_registrar_usuari"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        app:layout_constraintLeft_toRightOf="@id/tv_registrar_usuari"
        app:layout_constraintTop_toTopOf="@id/tv_registrar_usuari"
        app:layout_constraintRight_toRightOf="parent"/>
    <EditText
        android:id="@+id/et_registrar_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        app:layout_constraintLeft_toRightOf="@id/tv_registrar_pass"
        app:layout_constraintTop_toTopOf="@id/tv_registrar_pass"
        app:layout_constraintRight_toRightOf="parent"/>
    <EditText
        android:id="@+id/et_registrar_password1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        app:layout_constraintLeft_toRightOf="@id/tv_registrar_pass1"
        app:layout_constraintTop_toTopOf="@id/tv_registrar_pass1"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/bt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="postLoginUsuario"
        android:text="@string/bt_registrar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_registrar_password1"/>
</androidx.constraintlayout.widget.ConstraintLayout>